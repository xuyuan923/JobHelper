//管理员成员列表页
extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 成员头像
                        th 成员昵称
                        th 年级
                        th 学院
                        th 公司
                        th 职位
                        th 查看详情
                        th 修改
                        th 删除
                    tbody
                each item in members
                    tr(class="item-id-#{item._id}")
                        td
                            image(src='/upload/'+item.avator,style="width:100px;height:100px")
                        td #{item.nickName}
                        td #{item.grade}
                        td #{item.college}
                        td #{item.company}
                        td #{item.job}
                        td: a.btn.btn-info.btn-xs(target="_blank",href="/member/#{item._id}") 查看
                        td: a.btn.btn-success.btn-xs(target="_blank",href="/admin/member/update/#{item._id}") 修改
                        td
                            button.btn.btn-danger.del.btn-xs(type="button",data-id="#{item._id}") 删除
    script(src="/js/admin.js")