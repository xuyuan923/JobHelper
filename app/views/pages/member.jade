extends ../layout
block content
    .container.col-sm-offset-1.col-md-8
        form.form-horizontal(method="post" enctype="multipart/form-data" action="/admin/member")
            if member._id
                h3.page-header 编辑成员信息
                input(type="hidden",name="member[_id]",value=member._id)
            else
                h3.page-header 新建成员信息
            .form-group
                label.col-sm-2.control-label 头像
                .col-sm-5
                    if member._id
                        img(src='/upload/'+member.avator,style="width:50px;height:50px;border-radius:25px")
                    else
                        input(type="file",name="avator",multiple="multiple")
            .form-group
                label.col-sm-2.control-label 昵称
                .col-sm-5
                    input.form-control(type="text",name="member[nickName]",value= member.nickName)
            .form-group
                label.col-sm-2.control-label 年级
                .col-sm-5
                    input.form-control(type="text",name="member[grade]",value= member.grade)
            .form-group
                label.col-sm-2.control-label 学历
                .col-sm-5
                    label.radio-inline
                        input(type="radio",name="member[educational]",value="本科",checked)
                        | 本科
                    label.radio-inline
                        input(type="radio",name="member[educational]",value="研究生")
                        | 研究生
            .form-group
                label.col-sm-2.control-label 学院
                .col-sm-5
                    input.form-control(type="text",name="member[college]",value=member.college)
            .form-group
                label.col-sm-2.control-label 专业
                .col-sm-5
                    input.form-control(type="text",name="member[major]",value=member.major)
            .form-group
                label.col-sm-2.control-label 公司
                .col-sm-5
                    input.form-control(type="text",name="member[company]",value=member.company)
            .form-group
                label.col-sm-2.control-label 职位
                .col-sm-5
                    input.form-control(type="text",name="member[job]",value=member.job)
            .form-group
                label.col-sm-2.control-label 一句话介绍
                .col-sm-10
                    input.form-control(type="text",name="member[desc]",value=member.desc)
            .form-group
                label.col-sm-2.control-label QQ号
                .col-sm-5
                    input.form-control(type="text",name="member[qq]",value=member.qq)
            .form-group
                label.col-sm-2.control-label 微信
                .col-sm-5
                    input.form-control(type="text",name="member[weixin]",value=member.weixin)
            .form-group
                label.col-sm-2.control-label 手机号
                .col-sm-5
                    input.form-control(type="text",name="member[tel]",value=member.tel)
            .form-group
                label.col-sm-2.control-label 邮件
                .col-sm-5
                    input.form-control(type="text",name="member[mail]",value=member.mail)
            .form-group
                label.col-sm-2.control-label 大学生活及建议
                .col-sm-10
                    input#sug(type="hidden",name="member[sug]",value)
                    script(id="editor",type="text/plain",style="width:800px;height:400px;")
            .form-group
                label.col-sm-2.control-label 面试分享
                .col-sm-10
                    input.form-control(type="text",name="member[shares]",value=member.shares)
            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type="submit") 保存
    script(type="text/javascript",charset="utf-8",src="/ueditor/ueditor.config.js")
    script(type="text/javascript",charset="utf-8",src="/ueditor/ueditor.all.min.js")
    script(src="/ueditor/lang/zh-cn.js")
    script(src="/js/editor.js")