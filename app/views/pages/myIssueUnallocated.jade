button.btn.btn-primary.show-list
    span.glyphicon.glyphicon-list-alt 列表显示
button.btn.btn-default.show-calendar
    span.glyphicon.glyphicon-calendar 日历显示
table.table.table-hover.table-bordered.allocatedList(style="display:block;margin-top:10px")
    thead
        tr
            th 所属业务线
            th 需求主题
            th 需求状态
            th 查看详情
            th 认领
    tbody
        each issue in issues
            tr(class="issue-id-#{issue._id}")
                td #{issue.belongLineId.name}
                td #{issue.title}
                td
                    if issue.condition == "0"
                        code 需求分析中
                    if issue.condition == "1"
                        code PRD整理中
                    if issue.condition == "2"
                        code 原型设计中
                    if issue.condition == "3"
                        code 视觉稿设计中
                    if issue.condition == "4"
                        code demo制作中
                    if issue.condition == "5"
                        code 前后端联调中
                    if issue.condition == "6"
                        code 测试中
                    if issue.condition == "7"
                        code 发布
                td: a.btn.btn-info.btn-xs(target="_blank",href="/issue/#{issue._id}") 查看
                td: button.btn.btn-danger.btn-xs.allocate(type="button",data-id="#{issue._id}") 认领
#calendar-unAllocated.calendar(style="display:none;margin-top:10px")
